{
  "extends": [
    "config:base",
    "config:semverAllMonthly"
  ],
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "matchBaseBranches": ["main"],
      "addLabels": ["major"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchBaseBranches": ["main"],
      "enabled": false
    }
  ],
  "force": {
    "constraints": {
      "node": "< 15.0.0"
    }
  },
  "dependencyDashboardAutoclose": true,  
  "schedule": "after 11am every 3 weeks on Monday",
  "stabilityDays": 15,
  "pinVersions": false,
  "rebaseStalePrs": true
}
