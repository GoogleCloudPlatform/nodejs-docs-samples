require('shelljs/global');

installForDirectories('appengine');
installForDirectory('bigquery');
installForDirectory('computeengine');
installForDirectory('datastore');
installForDirectory('debugger');
installForDirectories('functions');
installForDirectory('language');
installForDirectory('logging');
installForDirectory('monitoring');
installForDirectory('prediction');
installForDirectory('pubsub');
installForDirectory('speech');
installForDirectory('storage');
installForDirectory('trace');
installForDirectory('vision');

cd('functions/ocr/app');
exec('npm install');
cd('../../..');

/**
 * Install NPM dependencies within a single directory.
 *
 * @param {string} directory The name of the directory in which to install dependencies.
 */
function installForDirectory(directory) {
  // Move into the directory
  cd(directory);

  // Install dependencies
  console.log(directory + '...installing dependencies');
  exec('npm install');
  console.log(directory + '...done');

  // Move out of the directory
  cd('..');
}

/**
 * Recursively install NPM dependencies within a single directory.
 *
 * @param {string} directory The name of the directory in which to recursively install dependencies.
 */
function installForDirectories(directory) {
  // Move into the directory
  cd(directory);

  // List the files in the directory
  ls('-dl', '*')
    .filter(function (file) {
      // Find the directories within the directory
      return file.isDirectory();
    })
    .forEach(function (file) {
      // Move into the sub-directory
      cd(file.name);

      // Install dependencies
      console.log(directory + '/' + file.name + '...installing dependencies');
      exec('npm install');
      console.log(directory + '/' + file.name + '...done');

      // Move out of the sub-directory
      cd('..');
    });

  // Move out of the directory
  cd('..');
}
